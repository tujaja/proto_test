<% form_for @artist, :url => url do |f| %>
  <%= f.error_messages %>

  <p class="txt_ess">
    * 必須項目
  </p>
  <p>アーティスト情報</p>

  <table class="form">
    <tbody>
      <tr>
        <th><span>*</span><%= f.label :domain, "ドメイン(固有名)" %> </th>
        <td class="field">
          <%= f.text_field :domain, :value => 'yomoya', :style => "width:300px; font-size: 14px;" %>
        </td>
        <td class="desc">
          <ul class="list1"> <li><span>半角英数小文字3～30文字</span></li> </ul>
        </td>
      </tr>

      <tr>
        <th><span>*</span><%= f.label :name, "アーティスト名" %> </th>
        <td class="field">
          <%= f.text_field :name, :value => 'yomoya', :style => "width:300px; font-size: 14px;" %>
        </td>
        <td class="desc">
          <ul class="list1"> <li><span>全角半角30文字以内</span></li> </ul>
        </td>
      </tr>

      <tr>
        <th><span>*</span><%= f.label :subname, "アーティスト名(サブ)" %> </th>
        <td class="field">
          <%= f.text_field :subname, :value => 'よもや', :style => "width:300px; font-size: 14px;" %>
        </td>
        <td class="desc">
          <ul class="list1"> <li><span>全角半角30文字以内</span></li></ul>
        </td>
      </tr>


      <tr>
        <th><span>*</span><%= f.label :mail, "メールアドレス" %> </th>
        <td class="field">
          <%= f.text_field :mail, :value => 'yomoya@gmail.com',  :style => "width:300px; font-size: 14px;" %>
        </td>
        <td class="desc">
          <ul class="list1"> <li><span>(例) 3shimeji@gmail.com</span></li> </ul>
        </td>
      </tr>

      <tr>
        <th><%= f.label :url, "ホームページ" %> </th>
        <td class="field">
          <%= f.text_field :url, :value => 'http://yomoya.com',  :style => "width:300px; font-size: 14px;" %>
        </td>
        <td class="desc">
          <ul class="list1"> <li><span>(例) http://3shimeji.com</span></li> </ul>
        </td>
      </tr>

      <tr>
        <th><%= f.label :url, "所属レーベル" %> </th>
        <td class="field">
          <%= f.collection_select "label_id", Label.find(:all), :id, :name %>
        </td>
        <td class="desc">
          <ul class="list1"></ul>
        </td>
      </tr>

      <tr>
        <th><%= f.label :description, "説明" %> </th>
        <td class="field">
          <%= f.text_area :description, :value => 'bass 岡崎英太',  :style => "width:300px; height: 200px; font-size: 14px;" %>
        </td>
        <td class="desc">
          <ul class="list1"></ul>
        </td>
      </tr>

      <tr>
        <th><%= f.label :related_image, "関連画像" %> </th>
        <td class="field">
          <%= f.collection_select "related_image", Image.find(:all), :token, :filename, {}, {:onchange => "ElementHelper.select_image('image_select', 'thumb_image_tag', 's100');", :id => "image_select"} %>
        </td>
        <td class="desc">
          <span id="image_wrapper">
            <img id="thumb_image_tag" src="" />
          </span>
        </td>
      </tr>

    </tbody>
  </table>
  <p class="buttons">
  <%= f.submit action_name %>
  </p>

<% end %>
