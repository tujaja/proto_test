<div id="contents_header">
  <h2>Admin Artists</h2>
</div>

<div id="contents_main" class="admin_contents">
<h3>New Artist</h3>

<% form_for @artist, :url => admin_artists_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :token %><br />
    <%= f.text_field :token %>
  </p>
  <p>
    <%= f.label :domain %><br />
    <%= f.text_field :domain %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :subname %><br />
    <%= f.text_field :subname %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :mail %><br />
    <%= f.text_field :mail %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_artists_path %>
</div>

<div id="contents_footer">
</div>
