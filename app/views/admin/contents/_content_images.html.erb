<div id="related_images">
<% if images.any?  -%>
  <% primary_image = @content.primary_image %>

  <div id="image_wrapper" style="width:100px; height:100px"><%= s100_for primary_image %></div>

  <% images.each do |image| %>
  <div class="image_thumb<%= " primary" if primary_image.id == image.id %>">
    <ul>
    <li>
    <p>
    <%= link_to_function((s50_for image), "switch_image('#{image.token}', $('image_wrapper').firstDescendant(), 's100');") %>
    </p>

    </li>
  </ul>
  </div>
  <% end %>

  <div class="clear"></div>
<% else -%>
  <p>関連画像はありません</p>
<% end -%>
</div>
