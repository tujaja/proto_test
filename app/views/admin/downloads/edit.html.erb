<div id="contents_header">
  <h2>Admin Downloads</h2>
</div>

<div id="contents_main" class="admin_downloads">
  <h3>Update Download</h3>
  <% form_for @download,
    :url => admin_download_path(@download),
    :html => { :multipart => true } do |f| -%>

    <p>
      <label for="upload_file">Upload File</label>
      <%= f.file_field :uploaded_file %>
    </p>
    <p>
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>

</div>

<div id="contents_footer">
</div>
