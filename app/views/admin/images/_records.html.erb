<table class="items">
<tbody>
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>FileName</th>
    <th>Comment</th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%=h image.id %></td>
    <td><%= link_to (icon_for image), admin_image_path(image.id)  %></td>
    <td><%=h image.filename %></td>
    <td><%=h image.comment %></td>
    <td><%= link_to 'Show', admin_image_path(image) %></td>
    <td><%= link_to 'Edit', edit_admin_image_path(image) %></td>
    <td><%= link_to 'Destroy', admin_image_path(image), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
