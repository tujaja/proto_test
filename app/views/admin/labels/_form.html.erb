<% form_for @label, :url => admin_labels_path do |f| %>
  <%= f.error_messages %>

  <p class="txt_exx">
  </p>
  <h3>レーベル情報</h3>

  <table class="tableTypeForm1">
    <tbody>
      <tr>
        <th><span>*</span><%= f.label :domain, "ドメイン(固有名)" %> </th>
        <td style="width: 37%">
          <%= f.text_field :domain, :style => "width:150px; font-size: 14px;" %>
        </td>
        <td class="tableTypeForm1End" style="width: 38%">
          <ul class="list1"> <li><span>半角英数小文字3～30文字</span></li> </ul>
        </td>
      </tr>

      <tr>
        <th><span>*</span><%= f.label :name, "レーベル名" %> </th>
        <td style="width: 37%">
          <%= f.text_field :name, :style => "width:150px; font-size: 14px;" %>
        </td>
        <td class="tableTypeForm1End" style="width: 38%">
          <ul class="list1"> <li><span>全角半角30文字以内</span></li> </ul>
        </td>
      </tr>

      <tr>
        <th><span>*</span><%= f.label :subname, "レーベル名(サブ)" %> </th>
        <td style="width: 37%">
          <%= f.text_field :subname, :style => "width:150px; font-size: 14px;" %>
        </td>
        <td class="tableTypeForm1End" style="width: 38%">
          <ul class="list1"> <li><span>全角半角30文字以内</span></li></ul>
        </td>
      </tr>



      <tr>
        <th><span>*</span><%= f.label :mail, "メールアドレス" %> </th>
        <td style="width: 37%">
          <%= f.text_field :mail, :style => "width:150px; font-size: 14px;" %>
        </td>
        <td class="tableTypeForm1End" style="width: 38%">
          <ul class="list1"> <li><span>(例) 3shimeji@gmail.com</span></li> </ul>
        </td>
      </tr>


      <tr>
        <th><%= f.label :url, "ホームページ" %> </th>
        <td style="width: 37%">
          <%= f.text_field :url, :style => "width:150px; font-size: 14px;" %>
        </td>
        <td class="tableTypeForm1End" style="width: 38%">
          <ul class="list1"> <li><span>(例) http://3shimeji.com</span></li> </ul>
        </td>
      </tr>

      <tr>
        <th><%= f.label :phone, "Phone" %> </th>
        <td style="width: 37%">
          <%= f.text_field :phone, :style => "width:150px; font-size: 14px;" %>
        </td>
        <td class="tableTypeForm1End" style="width: 38%">
          <ul class="list1"> <li><span>半角数字</span></li> </ul>
        </td>
      </tr>

      <tr>
        <th><%= f.label :address, "所在地" %> </th>
        <td style="width: 37%">
          <%= f.text_field :address, :style => "width:300px; font-size: 14px;" %>
        </td>
        <td class="tableTypeForm1End" style="width: 38%">
          <ul class="list1"> <li><span>全角</span></li> </ul>
        </td>
      </tr>

      <!--tr>
        <td class="lh"><%= f.label :description %></td>
        <td class="input_textarea"><%= f.text_area :description %></td>
      </tr-->

    </tbody>
  </table>
  <p class="buttons">
  <%= f.submit 'Create' %>
  </p>


<% end %>
