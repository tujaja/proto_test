<div id="remote_form">
<% remote_form_for @order, :url => url do |f| %>
  <p class="need"> * 必須項目 </p>
  <p class="title">オーダーの新規発行</p>

  <table class="form">
    <tbody>
      <tr>
        <th><%= f.label :email, "メールアドレス" %> </th>
        <td class="field">
          <%= f.text_field :email, :style => "width:300px; font-size: 14px;" %>
        </td>
        <td class="desc">
          <ul class="list1"> <li><span>半角英数小文字3～30文字</span></li> </ul>
        </td>
      </tr>
      <tr>
        <th><%= f.label :payment_type, "お支払い方法" %></th>
        <td>
          <%= f.radio_button(:payment_type, "free", {:checked => true} ) %>Free
          <%= f.radio_button(:payment_type, "paypal") %> <%= image_tag "paypal.gif" %>
        </td>
        <td class="desc">
          <ul class="list1"></ul>
        </td>
      </tr>
    </tbody>
  </table>


  <%= render :partial => "mock_order" %>



  <div class="btn_small" style="text-align:center;"><span class="btn btn_small btn_bk_gr">
  <%= link_to_function 'コンテンツを追加',
    "content_selector(1,
      function(content) {
        resource_update('orders', '', {command:'mock_order_add', content_id:content.id});
      });"
  %>
  </span></div>

  <p class="buttons" style="padding-top: 50px;"><%= f.submit action_name %> </p>
<% end -%>
