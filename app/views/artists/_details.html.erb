<div id="details">

  <%= render :partial => "artist_images", :locals => { :images => @artist.images } %>

  <p><%=h @artist.description %></p>
  <dl><dt>レーベル</dt>
    <dd>
      <%= link_to((s50_for @artist.label.primary_image), label_path(@artist.label.domain)) %>
      <%= link_to h(@artist.label.name), label_path(@artist.label.domain) %>
    </dd>
  </dl>
  <% if @artist.url != "" %>
    <dl><dt>URL</dt> <dd><%=h @artist.url %></dd></dl>
  <% end %>
  <% if @artist.email != "" %>
    <dl><dt>email</dt> <dd><%=h @artist.email %></dd></dl>
  <% end %>

  <% if @artist.contents.any?  %>
    <dl>
      <dt>コンテンツ</dt>
      <dd>
        <ul>
        <% @artist.contents.each do |content| %>
          <li><%= h(content.name) %></li>
        <% end %>
        </ul>
      </dd>
    </dl>
  <% end -%>
</div>
