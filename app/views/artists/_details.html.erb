<div id="details">
  <% primary_image = @artist.primary_image %>

  <div id="primary_image"><%= s300_for primary_image %></div>

  <div id="information">
    <dl><dt>レーベル</dt>
      <dd>
        <%= link_to((s25_for @artist.label.primary_image), label_path(@artist.label.domain)) %>
        <%= link_to h(@artist.label.name), label_path(@artist.label.domain) %>
      </dd>
    </dl>
    <% if @artist.url != "" %>
      <dl><dt>ホームページ</dt> <dd><%=h @artist.url %></dd></dl>
    <% end %>
    <% if @artist.email != "" %>
      <dl><dt>Eメール</dt> <dd><%=h @artist.email %></dd></dl>
    <% end %>
  </div>

  <div class="clear"></div>



  <%= render :partial => "artist_images", :locals => { :images => @artist.images } %>
  <p><%=h @artist.description %></p>

  <%# if @artist.contents.any?  %>
    <!--dl>
      <dt>コンテンツ</dt>
      <dd>
        <ul>
        <% @artist.contents.each do |content| %>
          <li><%= h(content.name) %></li>
        <% end %>
        </ul>
      </dd>
    </dl-->
  <%# end -%>
</div>
