<% if @artists.any? %>
  <% @artists.each do |artist| %>
    <div id="thumb" class="artist">
      <ul>
        <li>
        <p><%= link_to (thumb_for artist.images[0]), artist_path(artist.domain)  %></p>
        <p><%= link_to h(artist.name), artist_path(artist.domain) %></p>
        <p><%= link_to h(artist.label.name), label_path(artist.label.domain) %></p>

        </li>
      </ul>
    </div>
  <% end %>
<% end %>

<div class="clear"></div>
