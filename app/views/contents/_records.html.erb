<table class="table_record">
<tbody>

<% @contents.each do |content| %>
  <tr>
    <td class="thumb"><%= link_to((icon_for content.images[0]), content_path(content.domain)) if content.images[0] %></td>
    <td class="desc">
      <div class="desc_title">
        <h4><%= link_to h(content.name), content_path(content.domain) %></h4>
      </div>
      <div class="desc_mini">
        <%= link_to h(content.artist.name), artist_path(content.artist.domain) %>
        /
        <%= link_to h(content.label.name), label_path(content.label.domain) %>
      </div>
      <div class="desc_file">
        <% if content.info %>
          <span class="mark"><%=h content.info.file_encoding %></span>
          <span class="mark"><%=h content.info.time %></span>
        <% end %>
        <% if content.download %>
          <span class="mark"><%=h to_megabyte(content.download.size) %></span>
        <% end -%>
      </div>

    </td>
    <td class="price">
      <%= h(to_yen(content.price)) %>
    </td>

    <td class="buy">
    <%#PUTメソッドで送信%>
    <% form_tag( {:controller => "carts", :action => "update",
                  :protocol => 'https://', :only_path => false}) do -%>
      <input name="_method" type="hidden" value="put" />
      <%= hidden_field_tag("cart_item[content_id]", "#{content.id}") %>
      <%= hidden_field_tag("cart_item[quantity]", "1") %>
      <%= submit_tag "カートに入れる" %>
    <% end -%>
    </td>
  </tr>
<% end %>
</tbody>
</table>
