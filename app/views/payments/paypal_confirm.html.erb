<div id="contents_header">
  <h2>PayPalでのご注文の確認</h2>
</div>

<div id="contents_main" class="contents_index">

  <%= render :partial => "carts/cart_items" %>

<hr />

<dl>
  <dt>first_name</dt> <dd><%=h @payment.first_name %></dd>
  <dt>last_name</dt> <dd><%=h @payment.last_name %></dd>
  <dt>email</dt> <dd><%=h @payment.email %></dd>
  <dt>payment_type</dt> <dd><%=h @payment.payment_type %></dd>
</dl>

<hr />
<%#PUTメソッドで送信%>
<% form_tag payment_path  do -%>
  <input name="_method" type="hidden" value="put" />
  <input name="payment_method" type="hidden" value="paypal_confirm" />
  <%= submit_tag "PayPalで支払う" %>
<% end -%>

<div id="contents_footer">
</div>
